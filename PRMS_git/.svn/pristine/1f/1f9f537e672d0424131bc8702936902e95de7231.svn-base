package kr.or.ddit.franchise.franchisee.controller;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;

import kr.or.ddit.franchise.franchisee.service.FranBoardService;
import kr.or.ddit.vo.FranBoardVO;
import lombok.RequiredArgsConstructor;


@RequiredArgsConstructor
@Controller
@RequestMapping("/main/franchisee/franBoard")
public class FranBoardUI {

	private final FranBoardService franBoardService;

	/**
	 * 가맹점게시판 리스트 이동 메소드
	 * @return
	 */
	@GetMapping
	public String franBoardUI() {
		return "franchisee:franchisee/franBoard";
	}

	/**
	 * 가맹점게시판 상세페이지로 이동하는 메소드
	 * @return
	 */
	@GetMapping("detail/{franBoardNo}")
	public String franBoardDetailUI(
		@PathVariable("franBoardNo") int franBoardNo
		,Model model
	) {
		FranBoardVO franBoardVO = franBoardService.retrieveFranBoard(franBoardNo);
		model.addAttribute("franBoardVO",franBoardVO);

		return "franchisee:franchisee/franBoardDetail";
	}
}
